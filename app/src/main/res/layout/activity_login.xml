<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_vertical"
    tools:context=".ui.user.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/first_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Vous devez vous connecter à votre compte pour compléter votre réservation "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:fontFamily="@font/poppins_regular"
            android:padding="18dp"
            android:background="@color/white"
            android:hint="Email"
            />
        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:padding="18dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@color/white"
            android:hint="Mot de passe"


            />
        <CheckBox
            android:id="@+id/privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/poppins_medium"
            android:text="J'accepte les roles et privacy"
            android:textColor="@color/white"
            android:checked="true"/>

        <!--<Button
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="51dp"
            android:width="265dp"
            android:text="Connexion"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style"/>-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connect_button"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/poppins_semibold"
            style="@style/MyCustomButtonStyle"
            android:textColor="@color/black"
            android:text="Connexion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si vous n'avez pas de compte cliquez-ici"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_text"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:focusable="true"
            android:minHeight="48dp"
            android:text="Créer un compte"
            android:textColor="@color/yellow"
            android:textSize="15sp" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>